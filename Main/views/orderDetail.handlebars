
 
 <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <h2 class="text-center mb-4">Order History</h2>
        <div class="card order-card mb-4">
          {{#each data as |order| }}
          <div class="card-header">
            Order Number: #{{order.transaction_id}}
          </div>
          <div class="card-body">
                     <div class="row">
                    <div class="col-md-4">
                        <img src="{{order.product_url}}" class="img-fluid order-image" alt="Order Image">
                    </div>
                    <div class="col-md-8">
                        <ul class="list-group">
                            <li class="list-group-item"><strong>Item: </strong> {{order.product_name}}</li>
                               <li class="list-group-item"><strong>Description:</strong> {{order.product_description}}</li>
                            <li class="list-group-item"><strong>Total with tax: </strong> ${{order.total}} ({{order.Qty}} @ ${{order.singlePrice}})</li>                         
                        </ul>
                    </div>
                </div>
            {{/each}}
            </div>
      </div>
      